<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content" android:clickable="true" android:orientation="vertical" android:layout_width="fill_parent" android:layout_margin="10px">
    <TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="@string/hu_server_addr" android:layout_marginLeft="10px" android:id="@+id/text_server_address"></TextView>
    <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_marginLeft="10px" android:id="@+id/edit_server_address" android:inputType="textUri"></EditText>
    <TextView android:layout_width="wrap_content" android:text="@string/hu_server_port" android:layout_height="wrap_content" android:id="@+id/text_server_port" android:layout_marginLeft="10px"></TextView>
    <EditText android:layout_width="fill_parent" android:id="@+id/edit_server_port" android:text="@string/null_string" android:layout_height="wrap_content" android:layout_marginLeft="10px" android:inputType="number"></EditText>
    
</LinearLayout>